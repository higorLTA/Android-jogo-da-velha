<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.FragmentJogo">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/line_jogador1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvPlacar1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:padding="10dp"
            android:text="@string/jogador1"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/placar_jod1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:padding="10dp"
            android:text="0"
            android:textAlignment="center"
            android:textAppearance="@android:style/TextAppearance.Medium" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:focusable="false"
        app:layout_constraintLeft_toRightOf="@+id/line_jogador1"
        app:layout_constraintTop_toBottomOf="@+id/line_jogador1">

    </View>

    <LinearLayout
        android:id="@+id/line_jogador2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line_jogador1">

        <TextView
            android:id="@+id/tvPlacar2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:padding="10dp"
            android:text="@string/jogador2"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/placar_jod2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:padding="10dp"
            android:text="0"
            android:textAlignment="center"
            android:textAppearance="@android:style/TextAppearance.Medium" />

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:focusable="false"
        app:layout_constraintLeft_toRightOf="@+id/line_jogador1"
        app:layout_constraintTop_toBottomOf="@+id/line_jogador1">

    </View>

    <LinearLayout
        android:id="@+id/velha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line_jogador2">

        <TextView
            android:id="@+id/tvVelha"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:padding="10dp"
            android:text="@string/placar_velha"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pEmpate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:padding="10dp"
            android:text="0"
            android:textAlignment="center"
            android:textAppearance="@android:style/TextAppearance.Medium" />

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/velha">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <Button
                android:id="@+id/bt00"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:textColor="@color/blue"
                android:textSize="50sp"></Button>

            <Button
                android:id="@+id/bt01"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:textColor="@color/blue"
                android:textSize="50sp"></Button>

            <Button
                android:id="@+id/bt02"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:textColor="@color/blue"
                android:textSize="50sp"></Button>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <Button
                android:id="@+id/bt10"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:textColor="@color/blue"
                android:textSize="50sp">

            </Button>

            <Button
                android:id="@+id/bt11"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:textColor="@color/blue"
                android:textSize="50sp">

            </Button>

            <Button
                android:id="@+id/bt12"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:textColor="@color/blue"
                android:textSize="50sp">

            </Button>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <Button
                android:id="@+id/bt20"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:textColor="@color/blue"
                android:textSize="50sp">

            </Button>

            <Button
                android:id="@+id/bt21"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:textColor="@color/blue"
                android:textSize="50sp">

            </Button>

            <Button
                android:id="@+id/bt22"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:textColor="@color/blue"
                android:textSize="50sp">

            </Button>

        </TableRow>
    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>